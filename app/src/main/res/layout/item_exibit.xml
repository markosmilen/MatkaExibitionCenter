<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
>

    <androidx.cardview.widget.CardView
        android:id="@+id/exibit_recyclerview_horizontal_id"
        android:layout_width="140dp"
        android:layout_height="160dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_exibitcard_img_id"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/exibitone"
                />

            <TextView
                android:id="@+id/item_exibitcard_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                style="@style/ItemsTextStyle"
                tools:text="Приказ на електро дистибутивен систем"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>